                                                                <Button Grid.Row="8"
                                                                        Style="{DynamicResource MarkButtonStyle}"
                                                                        x:Name="Room214mark"
                                                                        Text="214"
                                                                        Clicked="RoomButton_Clicked" />
        
        <Rectangle Grid.Row="9" Fill="{DynamicResource xxx}" Grid.ColumnSpan="2" Margin="30,0,30,0" HeightRequest="5"/>
        
        <Button Grid.Row="10"
                Style="{DynamicResource RoomsButtonStyle}"
                x:Name="Room213"
