<?xml version="1.0" encoding="utf-8" ?>

<!--xmlns:viewmodel="clr-namespace:Mobile_Selyanichev_MauiApp.ViewModels"
             x:DataType="viewmodel:RoomsViewModel"
    Command="{Binding RoomButton_ClickedCommand}"-->
    
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mobile_Selyanichev_MauiApp.Rooms"
             
             Title="Rooms"
             
             BackgroundColor="{StaticResource Gray200}">
            
    
    <ContentPage.Resources>
   
            <Color x:Key="xxx">#512BD4</Color>
        
        <Style  x:Key="RoomsButtonStyle"
                TargetType="Button">
            <Setter Property="BackgroundColor" Value="{DynamicResource  xxx}"/>
            <Setter Property="TextColor" Value="White" />
            <Setter Property="WidthRequest" Value="50"/>
            <Setter Property="HeightRequest" Value="40"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="0"/>
        </Style>

        <Style  x:Key="MarkButtonStyle"
                TargetType="Button">
            <Setter Property="BackgroundColor" Value="{StaticResource Cyan100Accent}"/>
            <Setter Property="TextColor" Value="White" />
            <Setter Property="Margin" Value="40,0,0,30" />
            <Setter Property="WidthRequest" Value="22"/>
            <Setter Property="HeightRequest" Value="22"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="0"/>
        </Style>
        
    </ContentPage.Resources>

   
    <Grid>

        
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="58"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Rectangle Grid.Row="0" Fill="{DynamicResource  xxx}" Grid.ColumnSpan="2"   />

        <ImageButton Source="strelochka.png"
                     MaximumHeightRequest="40"
                     MaximumWidthRequest="40"
                     Margin="5,5,0,0"
                     Grid.Row="0"
                     BackgroundColor="Transparent"
                     Clicked="GoBackButton_Clicked" 
                     x:Name="GoBackButton"
                     HorizontalOptions="Start" />

        <ImageButton Source="done.png"
                     MaximumHeightRequest="40"
                     MaximumWidthRequest="40"
                     Margin="0,0,5,5"
                     Grid.Row="0"
                     Grid.Column="1"
                     BackgroundColor="Transparent"
                     Clicked="DoneButton_Clicked" 
                     x:Name="DoneButton"
                     HorizontalOptions="End" />

        <Label Grid.Row="0"
               FontSize="22"
               Margin="0,0,0,0"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               Grid.ColumnSpan="2"
                TextColor="White"
               Text="Выбор Ауд-и" />


        <Image x:Name="Image1"
               Grid.Row="0"
               Margin="0,0,180,0"
               WidthRequest="32"
               HorizontalOptions="Center"
               Grid.ColumnSpan="2"/>

        <Button Grid.Row="1"
                Style="{DynamicResource RoomsButtonStyle}"
               
                x:Name="Room221"
                Text="221"
                HorizontalOptions="Center"
                Clicked="RoomButton_Clicked" />

                                                                <Button Grid.Row="1"
                                                                        Style="{DynamicResource MarkButtonStyle}"
                                                                        x:Name="Room221mark"
                                                                        Text="221"
                                                                        Clicked="RoomButton_Clicked" />         
        
        <Button Grid.Row="2"
                Style="{DynamicResource RoomsButtonStyle}"
                x:Name="Room219"
                Text="219"
                
                HorizontalOptions="Center"
                Clicked="RoomButton_Clicked" />

                                                                <Button Grid.Row="2"
                                                                        Style="{DynamicResource MarkButtonStyle}"
                                                                        x:Name="Room219mark"
                                                                        Text="219"
                                                                        Clicked="RoomButton_Clicked" />

        <Button Grid.Row="3"
                Style="{DynamicResource RoomsButtonStyle}"
                x:Name="Room218a"
                Text="218a"
                HorizontalOptions="Center"
                Clicked="RoomButton_Clicked" />

                                                                <Button Grid.Row="3"
                                                                        Style="{DynamicResource MarkButtonStyle}"
                                                                        x:Name="Room218amark"
                                                                        Text="218a"
                                                                        Clicked="RoomButton_Clicked" />
        <Button Grid.Row="4"
                Style="{DynamicResource RoomsButtonStyle}"
                x:Name="Room218"
                Text="218"
                HorizontalOptions="Center"
                Clicked="RoomButton_Clicked"
                />
                                                                <Button Grid.Row="4"
                                                                        Style="{DynamicResource MarkButtonStyle}"
                                                                        x:Name="Room218mark"
                                                                        Text="218"
                                                                        Clicked="RoomButton_Clicked" />
