                                                                <Button Grid.Row="7"
                                                                        Style="{DynamicResource MarkButtonStyle}"
                                                                        x:Name="Room215mark"
                                                                        Text="215"
                                                                        Clicked="RoomButton_Clicked" />
        <Button Grid.Row="8"
