                                                                <Button Grid.Row="10"
                                                                        Style="{DynamicResource MarkButtonStyle}"
                                                                        x:Name="Room213mark"
                                                                        Text="213"
                                                                        Clicked="RoomButton_Clicked" />
        <Button Grid.Row="4"
                Grid.Column="1"
                Margin="0,0,0,15"
                Style="{DynamicResource RoomsButtonStyle}"
                x:Name="Room227"
